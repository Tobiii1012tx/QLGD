@{
    ViewBag.Title = "FormCreateAndEdit";  
}
<div class="add-or-edit">
    <div class="row">
        <div class="col-md-3">
            <label>Họ và tên</label>
            <input type="text" name="name" class="form-control" />
            <div class="error"></div>
        </div>
        <div class="col-md-3">
            <label>Giới tính</label>
            <div class="d-flex justify-content-start">
                <label class="male mr-5"> <input type="radio" name="gender" id="male" value="male" checked /> Nam</label>
                <label class="female"> <input type="radio" name="gender" id="female" value="female" /> Nữ</label>
            </div>
            <div class="error"></div>
        </div>
        <div class="col-md-3">
            <label>Ngày sinh</label>
            <input type="date" name="birthday" class="form-control" />
            <div class="error"></div>
        </div>
        <div class="col-md-3">
            <label>Địa chỉ</label>
            <input type="text" name="address" class="form-control" />
            <div class="error"></div>
        </div>
        

    </div>
    <br />
    <div class="row">
        <div class="col-md-3">
            <label>Số điện thoại</label>
            <input type="text" name="phone" class="form-control" />
            <div class="error"></div>
        </div>
        <div class="col-md-3">
            <label>Email</label>
            <input type="text" name="email" class="form-control" />
            <div class="error"></div>
        </div>
        <div class="col-md-3">
            <label>Tên khoa</label>
            <select class="form-control" id="facultyid">
                @foreach (var item in ViewBag.ListFaculty as IEnumerable<SchoolManager.Models.Faculty>)
                {
                    <option value="@item.ID">@item.Name</option>
                }
            </select>

            <div class="error"></div>
        </div>
        <div class="col-md-3">
            <label>Ghi chú</label>
            <input type="text" name="node" class="form-control" />
        </div>
    </div>
    <br />
    <button class="btn-add btn btn-primary">Thêm mới</button>
    <button class="btn-edit btn btn-success"> Cập nhập</button>
</div>
