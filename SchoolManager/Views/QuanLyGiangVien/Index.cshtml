@model IEnumerable<SchoolManager.Models.Lecturer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1> Dánh sách giảng viên </h1>
    <br />
    <div class="row">
        <div class="col-md-4">
            <label>  Tên giảng viên </label>
            <input type="text" name="searchName" value="" placeholder="Nhập từ khóa..." class="form-control" />
        </div>
        <div class="col-md-4">
            <label> Tên khoa</label>
            <select class="subjectID form-control">
                <option value="0"> Tất cả các khoa</option>
                @foreach (var item in ViewBag.ListFaculty as IEnumerable<SchoolManager.Models.Faculty>)
                {
                    <option value="@item.ID">@item.Name</option>
                }
            </select>
        </div>
    </div>
    <hr />
    <div class="list-lecture">

    </div>
    <hr />
    <div class="form-addoredit">
        @Html.Action("FormCreateAndEdit", "QuanLyGiangVien")
    </div>
</div>

@section scripts{

    <script src="~/Scripts/QuanLyGiangVien.js"></script>
}